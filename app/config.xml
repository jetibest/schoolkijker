<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.schoolkijker.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <icon src="res/icon.png" />
    <name>Schoolkijker</name>
    <description>
        Digitaal onderwijs met Schoolkijker. Maak je eigen oefeningen, leerplannen, lesmateriaal, resultaatweergaven, en rapporten.
    </description>
    <author email="vandermeer.jw@gmail.com" href="http://schoolkijker.nl">
        Schoolkijker
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
